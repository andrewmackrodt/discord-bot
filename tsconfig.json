{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "ES2023"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES2022",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./*.ts"
  ]
}
